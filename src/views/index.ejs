<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NodeJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <h2>List Users:</h2>
        <table id="customers">
            <tr>
                <th>Id</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Actions</th>
            </tr>
            <% for (let i=0; i<data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].id %>
                    </td>
                    <td>
                        <%= data[i].lastName %>
                    </td>
                    <td>
                        <%= data[i].firstName %>
                    </td>
                    <td>
                        <button type="button"><a href="/detail/<%= data[i].id %>">Detail</a></button>
                        <button type="button"><a href="/edit">Edit</a></button>
                        <button type="button"><a href="/delete">Delete</a></button>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</body>

</html>